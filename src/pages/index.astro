---
import Grid from "../components/grid.astro";
import Layout from "../layouts/Layout.astro";
import Performer from "../components/performer.astro";
import data from "../assets/data/data.json";
---

<Layout title="Belting My Tits Off" header={true}>
  <Grid title="Cast">
    {
      data
        .filter((performer) => performer.role === "cast")
        .map((performer) => (
          <Performer
            loading={performer.index <= 1 ? "eager" : "lazy"}
            key={performer.index}
            name={performer.name}
            image={performer.image}
            pronouns={performer.pronouns}
            slug={performer.slug}
            bio={performer.bio}
          />
        ))
    }
  </Grid>
  <Grid title="Band">
    {
      data
        .filter((performer) => performer.role === "band")
        .map((performer) => (
          <Performer
            loading="lazy"
            key={performer.index}
            name={performer.name}
            image={performer.image}
            pronouns={performer.pronouns}
            slug={performer.slug}
            bio={performer.bio}
          />
        ))
    }
  </Grid>
  <Grid title="Stage">
    {
      data
        .filter((performer) => performer.role === "stage")
        .map((performer) => (
          <Performer
            loading="lazy"
            key={performer.index}
            name={performer.name}
            image={performer.image}
            pronouns={performer.pronouns}
            slug={performer.slug}
            bio={performer.bio}
          />
        ))
    }
  </Grid>
  <Grid title="Design">
    {
      data
        .filter((performer) => performer.role === "design")
        .map((performer) => (
          <Performer
            loading="lazy"
            key={performer.index}
            name={performer.name}
            image={performer.image}
            pronouns={performer.pronouns}
            slug={performer.slug}
            bio={performer.bio}
          />
        ))
    }
  </Grid>
</Layout>

---
import Grid from "../components/grid.astro";
import Layout from "../layouts/Layout.astro";
import Performer from "../components/performer.astro";
import data from "../assets/data/data.json";
---

<Layout title="Belting My Tits Off">
  <Grid title="Performers">
    {
      data.map((performer) =>
        1 >= performer.index ? (
          <Performer
            loading="eager"
            key={performer.index}
            name={performer.name}
            image={`/src/assets/${performer.image}.webp`}
            pronouns={performer.pronouns}
            slug={performer.slug}
          />
        ) : (
          <Performer
            loading="lazy"
            key={performer.index}
            name={performer.name}
            image={`/src/assets/${performer.image}.webp`}
            pronouns={performer.pronouns}
            slug={performer.slug}
          />
        )
      )
    }
  </Grid>
</Layout>

---
interface Props {
  name: string;
  image: string | undefined;
  pronouns?: string;
  slug: string | undefined;
  key: number;
  loading: "eager" | "lazy";
}

const { name, image, pronouns, slug, key, loading } = Astro.props;
---

<article
  class="bg-lightpink h-full shadow rounded-sm font-display flex flex-col justify-between"
>
  <!-- Image -->
  {
    image ? (
      <img
        src={`${image}.webp`}
        title={name}
        alt={`${name}`}
        loading={loading}
        class="w-full rounded-sm"
      />
    ) : (
      <div class="min-h-[50vh] h-full bg-gray-300"/>
    )
  }

  <!-- Prose -->
  <section class="p-2 text-black bg-opacity-20 flex flex-col flex-grow">
    <!-- Name & pronouns -->
    <section class="flex-grow">
      <h2
        class="text-2xl font-display text-center uppercase tracking-wider leading-8 mb-1"
      >
        {name}
      </h2>
      <p class="font-display mb-2 text-center">{pronouns && `(${pronouns})`}</p>
    </section>

    <!-- CTA -->
    {
      slug && (
        <div class="flex justify-center mt-4">
          <a href={`/${slug}`}>
            <button class="shadow px-6 py-2 rounded bg-darkpink text-white transition-transform transform hover:scale-105 active:scale-95">
              Bio
            </button>
          </a>
        </div>
      )
    }
  </section>
</article>

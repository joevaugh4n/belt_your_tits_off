---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="container h-max mx-auto">
  <h2 class="text-center font-display text-4xl mb-2">{title}</h2>
  <section
    class="grid lg:grid-cols-3 grid-cols-2 md:gap-4 gap-6 mx-auto mb-12 items-start"
  >
    <slot />
  </section>
</section>
